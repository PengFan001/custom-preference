<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="zzw_background">
        <item name="android:windowBackground">@color/backgroundColor</item>
    </style>

    <declare-styleable name="status_preference">
        <attr name="status_key" format="string"></attr>
        <attr name="status_title" format="string"></attr>
    </declare-styleable>

    <declare-styleable name="item_preference">
        <attr name="item_key" format="string"></attr>
        <attr name="item_title" format="string"></attr>
    </declare-styleable>

    <declare-styleable name="edit_preference">
        <attr name="edit_key" format="string"></attr>
        <attr name="edit_summary" format="string"></attr>
        <attr name="edit_title" format="string"></attr>
    </declare-styleable>

    <declare-styleable name="list_preference">
        <attr name="list_key" format="string"></attr>
        <attr name="list_title" format="string"></attr>
        <attr name="list_summary" format="string"></attr>
    </declare-styleable>

</resources>
